<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.staticfile.org/lxgw-wenkai-screen-webfont/1.6.0/style.css" />
    <style>
        body {
            font-family: "LXGW WenKai Screen", sans-serif;
            margin: 0;
            padding: 1em;
            box-sizing: border-box;
            width: 1000px;
            background-color: #ebf6f7;
        }

        .help-title {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-size: 2em;
            border-radius: 10px;
            box-shadow: 0 0 5px 0 black;
            margin: 0 0.5em 1em 0.5em;
            height: 3em;
            background-color: #e8d3d1;
        }

        .main {
            width: 100%;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            --border-color: #c97586;
        }

        .plugin {
            flex: 0 0 calc(100% / 3 - 2em);
            box-sizing: border-box;
            margin: 1em;
            border-radius: 10px;
            box-shadow: 0 0 10px 0 var(--border-color);
            border: solid 2px var(--border-color);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .plugin>p {
            margin: 0.5em;
        }

        .plugin-name {
            text-align: center;
            font-size: 1.5em;
            font-weight: bold;
            margin: 0 !important;
            padding: 0.5em;
            background-color: var(--border-color);
        }
    </style>
</head>
<body>
<div class="help-title">
    功能列表
</div>
<div class="main">
{%- for plugin in plugins -%}
    <div class="plugin">
        <p class="plugin-name">{{ plugin.name }}</p>
        <p>{{ plugin.description }}</p>
        <p>{{ plugin.usage }}</p>
    </div>
{%- endfor -%}
</div>
</body>
</html>
